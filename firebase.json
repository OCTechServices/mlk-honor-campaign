{
  "hosting": {
    "public": "server/public",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "/create-checkout-session",
        "function": "createCheckoutSession"
      },
      {
        "source": "/metrics",
        "function": "publicMetrics"
      },
      {
        "source": "/admin/api/dashboard",
        "function": "adminDashboard"
      }
    ]
  }
}
