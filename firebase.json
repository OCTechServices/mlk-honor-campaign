{
  "hosting": {
    "public": "server/public",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      { "source": "/metrics", "function": "publicMetrics" },
      { "source": "/admin/api/dashboard", "function": "adminDashboard" },
      { "source": "/create-checkout-session", "function": "createCheckoutSession" }
    ]
  },
  "functions": {
    "source": "server"
  }
}
